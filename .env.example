# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Node Environment (development | staging | production | test)
NODE_ENV=development

# Application Name
APP_NAME=FollowUpHub

# Application URL
APP_URL=http://localhost:5173

# API URL
API_URL=http://localhost:3000

# Server Port
PORT=3000

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================

# PostgreSQL Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example: postgresql://followuphub:password@localhost:5432/followuphub?schema=public
DATABASE_URL=postgresql://user:password@localhost:5432/followuphub?schema=public

# Database Host
DB_HOST=localhost

# Database Port
DB_PORT=5432

# Database Name
DB_NAME=followuphub

# Database User
DB_USER=followuphub_user

# Database Password
DB_PASSWORD=your_secure_database_password_here

# Database Schema
DB_SCHEMA=public

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# REDIS CONFIGURATION (Cache & Session Store)
# ============================================================================

# Redis Connection String
# Format: redis://[:PASSWORD@]HOST:PORT[/DATABASE]
REDIS_URL=redis://localhost:6379

# Redis Host
REDIS_HOST=localhost

# Redis Port
REDIS_PORT=6379

# Redis Password (leave empty if no password)
REDIS_PASSWORD=

# Redis Database Index (0-15)
REDIS_DB=0

# Session TTL (seconds) - 24 hours default
REDIS_SESSION_TTL=86400

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_in_production_minimum_32_characters_long

# JWT Algorithm (RS256 recommended for production, HS256 for development)
JWT_ALGORITHM=HS256

# Access Token Expiry (default: 30 minutes)
JWT_ACCESS_EXPIRY=30m

# Refresh Token Expiry (default: 7 days)
JWT_REFRESH_EXPIRY=7d

# JWT Issuer
JWT_ISSUER=FollowUpHub

# JWT Audience
JWT_AUDIENCE=followuphub-users

# ============================================================================
# BCRYPT PASSWORD HASHING
# ============================================================================

# Bcrypt Salt Rounds (10-12 recommended, higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================

# SMTP Host
SMTP_HOST=smtp.gmail.com

# SMTP Port (587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT=587

# SMTP Secure (true for SSL, false for TLS)
SMTP_SECURE=false

# SMTP Username
SMTP_USER=noreply@followuphub.com

# SMTP Password
SMTP_PASSWORD=your_smtp_password_here

# Email From Address
EMAIL_FROM=FollowUpHub <noreply@followuphub.com>

# Email Reply-To Address
EMAIL_REPLY_TO=support@followuphub.com

# ============================================================================
# MINUTEHUB INTEGRATION
# ============================================================================

# MinuteHub API Base URL
MINUTEHUB_API_URL=https://api.minutehub.com/v1

# MinuteHub API Key
MINUTEHUB_API_KEY=your_minutehub_api_key_here

# MinuteHub Webhook Secret (for signature verification)
MINUTEHUB_WEBHOOK_SECRET=your_minutehub_webhook_secret_here

# MinuteHub Organization ID
MINUTEHUB_ORG_ID=your_minutehub_org_id

# Enable MinuteHub Integration (true | false)
MINUTEHUB_ENABLED=false

# ============================================================================
# CLOUDINARY (FILE STORAGE)
# ============================================================================

# Cloudinary Cloud Name
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# Cloudinary API Key
CLOUDINARY_API_KEY=your_cloudinary_api_key

# Cloudinary API Secret
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Cloudinary Upload Preset (optional)
CLOUDINARY_UPLOAD_PRESET=followuphub

# Cloudinary Folder (optional)
CLOUDINARY_FOLDER=followuphub

# Maximum File Size (bytes) - 10MB default
MAX_FILE_SIZE=10485760

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================================================
# RATE LIMITING
# ============================================================================

# Global Rate Limit (requests per window)
RATE_LIMIT_MAX=100

# Rate Limit Window (milliseconds) - 15 minutes default
RATE_LIMIT_WINDOW=900000

# Auth Rate Limit (requests per window)
AUTH_RATE_LIMIT_MAX=5

# Auth Rate Limit Window (milliseconds) - 15 minutes default
AUTH_RATE_LIMIT_WINDOW=900000

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed Origins (comma-separated)
# Examples: http://localhost:5173,https://followuphub.com
CORS_ORIGIN=http://localhost:5173

# Allow Credentials
CORS_CREDENTIALS=true

# ============================================================================
# LOGGING
# ============================================================================

# Log Level (error | warn | info | debug | verbose)
LOG_LEVEL=info

# Log Directory
LOG_DIR=./logs

# Log Format (json | simple | combined)
LOG_FORMAT=json

# Enable Console Logging (true | false)
LOG_CONSOLE=true

# Enable File Logging (true | false)
LOG_FILE=true

# ============================================================================
# SECURITY
# ============================================================================

# Session Secret (CHANGE THIS IN PRODUCTION!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_session_secret_change_in_production_minimum_32_characters

# Cookie Domain (leave empty for localhost)
COOKIE_DOMAIN=

# Cookie Secure (true for HTTPS, false for HTTP)
COOKIE_SECURE=false

# Cookie SameSite (strict | lax | none)
COOKIE_SAMESITE=strict

# HSTS Max Age (seconds) - 1 year
HSTS_MAX_AGE=31536000

# Enable Helmet Security Headers (true | false)
HELMET_ENABLED=true

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Sentry DSN (Error Tracking)
SENTRY_DSN=

# New Relic License Key (APM)
NEW_RELIC_LICENSE_KEY=

# Google Analytics Tracking ID
GA_TRACKING_ID=

# ============================================================================
# FEATURES FLAGS
# ============================================================================

# Enable Registration (true | false)
ENABLE_REGISTRATION=true

# Enable Email Verification (true | false)
ENABLE_EMAIL_VERIFICATION=true

# Enable MFA (true | false) - Future feature
ENABLE_MFA=false

# Enable Audit Logging (true | false)
ENABLE_AUDIT_LOGGING=true

# Enable Performance Monitoring (true | false)
ENABLE_PERFORMANCE_MONITORING=true

# ============================================================================
# BILINGUAL SUPPORT
# ============================================================================

# Default Language (en | sw)
DEFAULT_LANGUAGE=en

# Supported Languages (comma-separated)
SUPPORTED_LANGUAGES=en,sw

# ============================================================================
# TIMEZONE
# ============================================================================

# Application Timezone (default: UTC)
TZ=UTC

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup Directory
BACKUP_DIR=./backups

# Backup Retention Days
BACKUP_RETENTION_DAYS=30

# Enable Automatic Backups (true | false)
ENABLE_AUTO_BACKUP=true

# ============================================================================
# TESTING
# ============================================================================

# Test Database URL (used for running tests)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/followuphub_test?schema=public

# Test Redis URL
TEST_REDIS_URL=redis://localhost:6379/1

# ============================================================================
# DEPLOYMENT
# ============================================================================

# Deployment Environment
DEPLOYMENT_ENV=development

# Git Commit SHA (auto-populated by CI/CD)
GIT_COMMIT_SHA=

# Build Number (auto-populated by CI/CD)
BUILD_NUMBER=

# ============================================================================
# CONTACT INFORMATION (for system emails and notifications)
# ============================================================================

# Support Email
SUPPORT_EMAIL=support@followuphub.com

# Admin Email
ADMIN_EMAIL=admin@followuphub.com

# Security Email
SECURITY_EMAIL=security@gurdianx.com

# ============================================================================
# PROJECT METADATA
# ============================================================================

# Project Owner
PROJECT_OWNER=GURDIAN-X

# Project Code
PROJECT_CODE=FUH-2025

# Project Version (auto-populated from package.json)
PROJECT_VERSION=0.1.0

