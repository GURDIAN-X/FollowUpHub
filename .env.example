# ---- Application ----
NODE_ENV=development
PORT=4000
BASE_URL=http://localhost:4000

# ---- Database ----
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=followup_user
DB_PASSWORD=strongpassword
DB_DATABASE=followuphub

# ---- Redis ----
REDIS_URL=redis://localhost:6379

# ---- JWT ----
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# ---- Password Security ----
BCRYPT_ROUNDS=12

# ---- Cloudinary ----
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ---- MinuteHub Integration ----
MINUTEHUB_API_URL=https://api.minutehub.africa
MINUTEHUB_CLIENT_ID=your_client_id
MINUTEHUB_CLIENT_SECRET=your_client_secret
MINUTEHUB_WEBHOOK_SECRET=your_webhook_secret

# ---- Email (SMTP) ----
SMTP_HOST=smtp.yourmail.com
SMTP_PORT=587
SMTP_USER=your_email_user
SMTP_PASS=your_email_password
EMAIL_FROM=FollowUpHub <no-reply@followuphub.co.tz>

# ---- SMS ----
SMS_PROVIDER=africastalking
AFRICASTALKING_API_KEY=your_africas_talking_api_key

# ---- Logging ----
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# ---- Rate Limiting ----
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ---- CORS ----
CORS_ORIGIN=http://localhost:3000

# ---- Session ----
SESSION_SECRET=your_session_secret
SESSION_TIMEOUT=3600

# ---- Security Headers ----
HSTS_MAX_AGE=31536000
CSP_HEADER=default-src 'self';

# ---- Monitoring/Analytics ----
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ---- Feature Flags ----
ENABLE_MFA=false
ENABLE_MINUTEHUB_SYNC=true

# ---- Localization ----
DEFAULT_LOCALE=sw
SUPPORTED_LOCALES=sw,en
TIMEZONE=Africa/Dar_es_Salaam

# ---- Backup ----
BACKUP_DIR=backups/

# Reminder: Never commit real secrets, passwords, or production credentials!